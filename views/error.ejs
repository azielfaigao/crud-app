<% layout('/layouts/boilerplate')%>
    <div class="my-5 p-5 text-center cover-container d-flex w-100 h-100 p-3 flex-column">
        <div class="d-flex h-100 text-center text-black">
            <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
                <div class="px-3">
                    <% if (err.name==='ValidationError' ) {%>
                        <h1 class="fw-bold my-3">
                            <%= err.name %>
                        </h1>
                        <p class="lead fw-normal my-3">
                            <%= err.message %>
                        </p>
                        <p><a href="javascript:history.back()" class="btn btn-lg btn-secondary my-3">Return to previous
                                page</a></p>
                    <% } else if (err.name==='CastError' ) {%>
                        <h1 class="fw-bold mb-3">Something went wrong</h1>
                        <p class="lead fw-normal">
                            <%= err %>
                        </p>
                        <p class="mt-3"><a href="/" class="btn btn-lg btn-secondary">Go to home page</a></p>
                    <% } else{%>
                        <h1 class="fw-bold">OOPS!</h1>
                        <p class="lead fw-normal">
                            <%= err.name %> - <%= err.message %>
                        </p>
                        <p><a href="/" class="btn btn-lg btn-secondary">Go to home page</a></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>